<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartHome"
             x:Class="SmartHome.OptionPage"

             Title="Options"
             BackgroundColor="#282828">

    <StackLayout>
        <Label Text="Willkommen zu Hause! Wähle deine Option!" 
           HorizontalOptions="Center"
           VerticalOptions="Start" 
           TextColor="WhiteSmoke"/>

        <StackLayout Padding="50">
            <Label Text="Grudfunktionen" 
                   HorizontalOptions="Center"
                   TextColor="WhiteSmoke"/>
            <Button Text="Licht"
                    Clicked="Button_OnClicked"
                    BackgroundColor="DimGray" 
                    TextColor="WhiteSmoke"/>
            <Button Text="Temperatur" BackgroundColor="DimGray" TextColor="WhiteSmoke"/>
            <Button  Text="Lüftung" BackgroundColor="DimGray" TextColor="WhiteSmoke"/>
        </StackLayout>

        <StackLayout Padding="50">
            <Label  Text="Zusatzfunktionen" 
                    HorizontalOptions="Center"
                    TextColor="WhiteSmoke"/>
            <Button Text="Alarmanlage" BackgroundColor="DimGray" TextColor="WhiteSmoke"/>
            <Button Text="Multimedia" BackgroundColor="DimGray" TextColor="WhiteSmoke"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
